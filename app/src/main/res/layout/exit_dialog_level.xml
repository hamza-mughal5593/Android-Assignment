<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:background="@drawable/roundedshape"
    android:orientation="vertical"

    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_20sdp">


    <RelativeLayout
        android:id="@+id/titllay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="GAME PAUSED"
            android:textColor="@color/orange"

            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />


    </RelativeLayout>


    <TextView
        android:id="@+id/correct_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="Are you sure you want to go to previous screen?"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="Question"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/your_money"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:fontFamily="@font/archive_regular"
        android:gravity="center"
        android:text="5/20"
        android:textColor="@color/money_color"
        android:textSize="@dimen/_30sdp" />


    <TextView
        android:id="@+id/okbtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center|center_vertical"
        android:text="CONTINUE PLAYING"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />
    <TextView
        android:id="@+id/takemoney_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center|center_vertical"
        android:text="RETURN TO LEVELS"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />
    <LinearLayout
        android:id="@+id/watch_video_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"

        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:weightSum="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/grey_bar">

        <ImageView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_centerVertical="true"
            android:id="@+id/music_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/exit_music_on" />

        <ImageView
            android:layout_weight="1"

            android:layout_centerVertical="true"
            android:id="@+id/sound_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/exit_volume_on" />
        <ImageView
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_15sdp"
            android:id="@+id/vibration_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/exit_vibration_off" />

    </LinearLayout>

</LinearLayout>