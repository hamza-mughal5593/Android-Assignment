<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_border_blue"
    android:orientation="horizontal"
    android:id="@+id/main_border"
    android:padding="@dimen/_5sdp">

    <ImageView
        android:id="@+id/cat_icon"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/arts" />

    <LinearLayout
        android:layout_toRightOf="@+id/cat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Level 1"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/level_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Question 0/20"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/btn"
        android:layout_alignParentRight="true"
        android:foregroundGravity="right"
        android:textColor="@color/black"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/button_bg"
        android:text="Play"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_50sdp"/>
    <ImageView
        android:id="@+id/lock_level"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:src="@drawable/lock_list"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_40sdp"/>

</RelativeLayout>