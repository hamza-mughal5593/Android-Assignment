<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mian_bg_blue"
    tools:context=".NormalType.ArcadeModeActivity">

    <RelativeLayout
android:layout_above="@+id/ad_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_des"
            android:orientation="vertical"
            android:weightSum="5">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_weight="0.4">

                <ImageView
                    android:id="@+id/backbtn"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/backbtn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Create Game"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="invisible"
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:src="@drawable/profile" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:layout_weight="0.5"
                android:background="@drawable/chit"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="Select Game Type"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:layout_weight="2.3"
                android:paddingTop="@dimen/_30sdp"
                android:paddingBottom="@dimen/_30sdp"
                android:src="@drawable/game_type_min" />



            <RelativeLayout
                android:id="@+id/timed_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:layout_weight="0.6"
                android:background="@drawable/bar_line">

                <ImageView
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:id="@+id/icon2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/stopwatch" />

                <TextView

                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/icon2"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="TIMED"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/category_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:layout_weight="0.6"
                android:background="@drawable/bar_line">

                <ImageView
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:id="@+id/icon3"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/catgry_icon" />

                <TextView

                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/icon3"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="CATEGORIES"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>