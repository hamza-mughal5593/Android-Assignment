<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:background="@drawable/roundedshape"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_20sdp">


    <RelativeLayout
        android:id="@+id/titllay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="Public Poll"
            android:textColor="@color/orange"

            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/tune1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_5sdp"

        android:layout_marginRight="@dimen/_50sdp"
        android:src="@drawable/poll"

        />


    <LinearLayout
        android:id="@+id/question_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"

        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_blue_bg"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="15dp"
            android:layout_gravity="center"

            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:progressDrawable="@drawable/custom_progress_lifeline" />

        <TextView
            android:id="@+id/optin_a_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:text="20%"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_blue_bg"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="B"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <ProgressBar
            android:id="@+id/progress_bar_b"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="15dp"
            android:layout_gravity="center"

            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:progressDrawable="@drawable/custom_progress_lifeline" />

        <TextView
            android:id="@+id/optin_b_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:text="20%"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/progress_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_blue_bg"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <ProgressBar
            android:id="@+id/progress_bar_c"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="15dp"
            android:layout_gravity="center"

            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:progressDrawable="@drawable/custom_progress_lifeline" />

        <TextView
            android:id="@+id/optin_c_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:text="20%"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

    <LinearLayout
android:id="@+id/progress_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_blue_bg"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="D"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <ProgressBar
            android:id="@+id/progress_bar_d"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="15dp"
            android:layout_gravity="center"

            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:progressDrawable="@drawable/custom_progress_lifeline" />

        <TextView
            android:id="@+id/optin_d_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:text="20%"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>


    <TextView
        android:id="@+id/okbtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center|center_vertical"
        android:paddingLeft="@dimen/_50sdp"
        android:paddingRight="@dimen/_50sdp"
        android:text="OK"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />


</LinearLayout>